<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/style"
    android:layout_width="match_parent"
    android:clipToPadding="false"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:outlineProvider="bounds"
        android:background="@drawable/bottom_pic1"
        app:behavior_peekHeight="125dp"
        android:clipToPadding="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageBottom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_pic2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageBottom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_pic3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageBottom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_pic4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/lineBottom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/line"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/lineBottom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/line"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lineBottom1" />

        <ImageView
            android:id="@+id/lineBottom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/line"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lineBottom2" />






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_first"
            android:layout_width="284dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/mainbutton"
            android:elevation="10dp"
            android:fontFamily="@font/robotoflexregular"
            android:gravity="center"
            android:selectAllOnFocus="false"
            android:shadowColor="#3C000000"
            android:shadowDx="40"
            android:shadowDy="50"
            android:text="@string/next"
            android:textColor="#FAE7C9"
            android:textSize="18sp"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineBottom3" />



        <RadioGroup
            android:id="@+id/mobiprint_mod_radio_group"
            android:layout_width="284dp"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/robotoflexregular"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/button_first"
            android:layout_marginTop="1dp"
            android:background="@drawable/radioback"
            android:textColor="#7E7E7E"
            android:textSize="12dp"
            android:textStyle="bold"

            >

            <RadioButton
                android:id="@+id/radio_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:text="@string/two_days"
                android:textColor="#7E7E7E"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@null"
                android:button="@drawable/radioon"/>

            <RadioButton
                android:id="@+id/radio_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:text="@string/seven_days"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#7E7E7E"
                android:background="@null"
                android:button="@drawable/radioon"/>

            <RadioButton
                android:id="@+id/radio_therty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:text="@string/therty_days"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#7E7E7E"

                android:checked="true"
                android:background="@drawable/radioactive"
                android:button="@drawable/radioon"/>
        </RadioGroup>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chips_cmn"
            android:layout_width="70dp"
            android:layout_height="24dp"

            android:layout_marginRight="230dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/chips_cmn"

            android:fontFamily="@font/robotoflexregular"
            android:gravity="center"
            android:selectAllOnFocus="false"
            android:text="@string/chips_cmn"
            android:textAllCaps="false"
            android:textColor="#A67E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"


            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chips_love"
            android:layout_width="70dp"
            android:layout_height="24dp"

            android:layout_marginRight="145dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/chips_cmn"

            android:fontFamily="@font/robotoflexregular"
            android:gravity="center"
            android:selectAllOnFocus="false"
            android:text="@string/chips_love"
            android:textAllCaps="false"
            android:textColor="#A67E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"


            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chips_money"
            android:layout_width="70dp"
            android:layout_height="24dp"

            android:layout_marginRight="60dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/chips_cmn"

            android:fontFamily="@font/robotoflexregular"
            android:gravity="center"
            android:selectAllOnFocus="false"
            android:text="@string/chips_money"
            android:textAllCaps="false"
            android:textColor="#A67E7E7E"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"


            />

        <TextView
            android:id="@+id/text_soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoflexregular"
            android:gravity="center_horizontal"

            android:layout_marginBottom="18dp"
            android:text="@string/soon"
            android:textAlignment="center"
            android:textColor="#807E7E7E"
            android:textDirection="firstStrongRtl"

            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>